<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".SelectMuscleGroupDialogFragment"
    android:layout_centerInParent="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/close_btn"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:focusable="true"
        android:clickable="true"
        android:layout_gravity="top|start"
        android:paddingEnd="4dp"
        android:contentDescription="@string/label_close_btn"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/muscle_group_list"
        android:name="com.remixtrainer.SelectMuscleGroupItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/close_btn"
        android:layout_toEndOf="@id/close_btn"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".SelectMuscleGroupItemFragment"
        tools:listitem="@layout/fragment_select_muscle_group_item" />
</RelativeLayout>